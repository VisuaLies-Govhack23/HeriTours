{
    "scripts": {
        "build": "ts-node build.ts --minify",
        "build-watch": "ts-node build.ts --watch",
        "clean": "rm -r ./dist",
        "serve-watch": "./env/bin/uvicorn --reload --port 5000 'backend.server:Server'",
        "serve": "./env/bin/uvicorn --port 5000 'backend.server:Server'",
        "format": "./env/bin/isort backend && ./env/bin/black backend && prettier -w frontend package.json .*.json build.ts *.md .*.cjs",
        "lint": "VIRTUAL_ENV=`pwd`/env PATH=`pwd`/env/bin:$PATH ./env/bin/pyright && tsc --noEmit && eslint frontend/",
        "upgrade": "npm-check-updates -u && npm install"
    },
    "dependencies": {
        "@types/node": "^20.5.0",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-leaflet": "^4.2.1",
        "zustand": "^4.4.1"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.2.0",
        "@types/mocha": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "esbuild": "^0.19.2",
        "mocha": "^10.2.0",
        "npm-check-updates": "^16.12.2",
        "prettier": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
